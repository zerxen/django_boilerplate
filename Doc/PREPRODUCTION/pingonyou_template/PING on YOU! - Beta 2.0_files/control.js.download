
/* Check if field is empty in spacific form ID */
$(document).ready(function() {
    document.getElementById('target-form').onsubmit = function() {
        if (!this.target.value) {
            alert ("Please Enter target!");
            return false;
        }
    };
});

/* Shows function form after button press 
(alternative can use slideToggles) */
$(document).ready(function() {
  //$('#slidebottom button').click(function(event) {
  $('.agree-button').click(function(event) {
    //alert("works");
    event.preventDefault();
    $(this).slideUp("fast");
    //$(this).next().slideDown("fast")
    $(this).next().slideToggle();
    //this.className = "agree-button-pressed";
    //this.value = "toggle-controls";
  });
});


